<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.PanelControlFragment">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="10dp"
       android:background="@color/gray_100">

       <LinearLayout
           android:clipToPadding="false"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:orientation="horizontal"
           android:padding="10dp">


           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_marginRight="10dp"
               android:layout_weight="1"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               app:cardCornerRadius="3dp"
               app:cardElevation="3dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="121dp"
                       android:gravity="center">

                       <ImageView
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@drawable/event_icon"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_alignParentBottom="true"
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:background="@color/red_400">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:text="Eventos"/>

                   </LinearLayout>

               </RelativeLayout>


           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               app:cardCornerRadius="3dp"
               app:cardElevation="3dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="121dp"
                       android:gravity="center">

                       <ImageView
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@drawable/video_icon"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_alignParentBottom="true"
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:background="@color/red_400">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:text="Cursos"/>

                   </LinearLayout>

               </RelativeLayout>

           </android.support.v7.widget.CardView>

       </LinearLayout>

       <LinearLayout
           android:clipToPadding="false"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:orientation="horizontal"
           android:padding="10dp">


           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_marginRight="10dp"
               android:layout_weight="1"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               app:cardCornerRadius="3dp"
               app:cardElevation="3dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="121dp"
                       android:gravity="center">

                       <ImageView
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@drawable/task_icon"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_alignParentBottom="true"
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:background="@color/red_400">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:text="Tareas"/>

                   </LinearLayout>

               </RelativeLayout>


           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               app:cardCornerRadius="3dp"
               app:cardElevation="3dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="121dp"
                       android:gravity="center">

                       <ImageView
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@drawable/social_network_icon"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_alignParentBottom="true"
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:background="@color/red_400">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:text="Red social"/>

                   </LinearLayout>

               </RelativeLayout>

           </android.support.v7.widget.CardView>

       </LinearLayout>

       <LinearLayout
           android:clipToPadding="false"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:orientation="horizontal"
           android:padding="10dp">


           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_marginRight="10dp"
               android:layout_weight="1"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               app:cardCornerRadius="3dp"
               app:cardElevation="3dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="121dp"
                       android:gravity="center">

                       <ImageView
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@drawable/bus_icon"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_alignParentBottom="true"
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:background="@color/red_400">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:text="Transporte Universitario"/>

                   </LinearLayout>

               </RelativeLayout>


           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               app:cardCornerRadius="3dp"
               app:cardElevation="3dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="121dp"
                       android:gravity="center">

                       <ImageView
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@drawable/library_icon"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_alignParentBottom="true"
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:background="@color/red_400">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:text="Biblioteca Virtual"/>

                   </LinearLayout>

               </RelativeLayout>

           </android.support.v7.widget.CardView>

       </LinearLayout>

   </LinearLayout>

</FrameLayout>